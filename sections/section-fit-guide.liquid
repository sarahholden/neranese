<header class="container page-padded-top js-animate">
  <div class="inner" data-anim="fade" data-anim-order="1">
    <h1 class="body--24">{{ section.settings.desc }}</h1>
    <div class="scaling-image-wrapper">
      {% render 'block-image', image: section.settings.image, m_image: section.settings.image, alt_text: section.settings.image_alt %}
    </div>

  </div>
</header>


{% schema %}
{
  "name": "Fit Guide Intro",
  "settings": [
    {
      "id": "desc",
      "type": "richtext",
      "label": "Intro Text"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "Image"
    },
    {
      "id": "image_alt",
      "type": "text",
      "label": "Image Alt",
      "info": "Write a brief description of this image to improve search engine optimization (SEO) and ADA accessibility."
    }
  ]
}
{% endschema %}
