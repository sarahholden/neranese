
{%- if section.settings.collection != blank or section.settings.title != blank -%}
  {%- assign collection = collections[section.settings.collection] -%}

  <section class="image-callout image-callout--collection container padded js-animate">

    <div class="image-wrap">
      {% if collection != blank %}
        <a href="{{ collection.url }}">
      {% endif %}
        <div data-anim="fade" data-anim-order="1">
          {% render 'block-image', image: section.settings.image, m_image: section.settings.image, alt_text: section.settings.image_alt %}
        </div>
        <div class="heading-wrapper">
          <h2 class="hd-1" data-anim="slide" data-anim-order="2">{{ section.settings.title }}</h2>
        </div>
      {% if collection != blank %}
        </a>
      {% endif %}
    </div>

  </section>

{%- endif -%}

{% schema %}
  {
    "name": "Featured Collection",
    "class": "is-padded",
    "settings": [
      {
        "id": "title",
        "type": "richtext",
        "label": "Title"
      },
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection",
        "info": "Selecting your collection here will automatically add a link"
      },
      {
        "id": "image",
        "type": "image_picker",
        "label": "Image"
      },
      {
        "id": "image_alt",
        "type": "text",
        "label": "Image Alt",
        "info": "Write a brief description of this image to improve search engine optimization (SEO) and ADA accessibility."
      }
    ],
    "presets": [
      {
        "name": "Featured Collection",
        "category": "Collections"
      }
    ]
  }

{% endschema %}
