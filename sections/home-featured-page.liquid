<section class="image-callout image-callout--page container padded">

    <div class="image-wrap js-animate">
      {% if section.settings.url != blank %}
        <a href="{{ section.settings.url }}">
      {% endif %}
      <div>
        <div data-anim="fade" data-anim-order="1">
          {% render 'block-image', image: section.settings.image, m_image: section.settings.image, alt_text: section.settings.image_alt %}
        </div>
      </div>

      <div class="heading-wrapper " >
        <h2 class="hd-1" data-anim="slide" data-anim-order="1">{{ section.settings.title }}</h2>
      </div>
      {% if section.settings.url != blank %}
        </a>
      {% endif %}
    </div>


</section>

{% schema %}
  {
    "name": "Centered Image Page Link",
    "class": "is-padded",
    "settings": [
      {
        "id": "title",
        "type": "richtext",
        "label": "Heading"
      },
      {
        "id": "url",
        "type": "url",
        "label": "URL",
        "info": "Link to collection, product, or page"
      },
      {
        "id": "image",
        "type": "image_picker",
        "label": "Image"
      },
      {
        "id": "image_alt",
        "type": "text",
        "label": "Image Alt",
        "info": "Write a brief description of this image to improve search engine optimization (SEO) and ADA accessibility."
      }
    ],
    "presets": [
      {
        "name": "Centered Image Page Link",
        "category": "Sections"
      }
    ]
  }
{% endschema %}
