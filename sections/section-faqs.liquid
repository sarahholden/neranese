<!-- ============================
HEADER
================================= -->
<header class="page-padded-top">
  <div class="container">
    <h1 class="hd-3">{{ section.settings.title }}</h1>
  </div>
</header>

<!-- ============================
FAQs
================================= -->
<section class="container">
  <div class="accordion list-animation-wrapper">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'faq_heading' %}
          <h2 class=" hd-5">{{ block.settings.title }}</h2>
        {% when 'faq_item' %}
          <div class="accordion-panel animate-item">
            <h3 class="accordion-toggle"><span class="text">{{ block.settings.title }}</span> <span class="icon"></span></h3>
            <div class="accordion-text">
              <div class="accordion-inner desc">
                {{ block.settings.desc }}
              </div>
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</section>


{% schema %}
{
  "name": "FAQ Page content",

  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "faq_heading",
      "name": "FAQ Section Heading",
      "settings": [
        {
          "id": "title",
          "type": "text",
          "label": "Section Heading",
          "info": "Use this block to split FAQ page into sections."
        }
      ]
    },
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "id": "title",
          "type": "text",
          "label": "Question",
          "info": "Will appear as clickable text"
        },
        {
          "id": "desc",
          "type": "richtext",
          "label": "Answer"
        }
      ]
    }
  ]
}
{% endschema %}
